@model Car
@{
    ViewData["Title"] = "ToCreateCar";
}

<h2>ToCreateCar</h2>

@using (Html.BeginForm("CreateCar", "Car"))
{
    <p>Make: </p>@Html.TextBoxFor(m => m.Make)
    <p>Model: </p>@Html.TextBoxFor(m => m.Model)
    <p>Year: </p>@Html.TextBoxFor(m => m.Year)
    <input type="submit" value="Submit" />
}

